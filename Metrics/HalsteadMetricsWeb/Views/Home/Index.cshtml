@model HalsteadMetricsWeb.Models.Halstead
@{
    Layout = null;
    var n = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>

<body>
    <br />
    <br />
    <br />

    <div class="container">
        <div class="row">
            <form method="get" action="/Home/Ananalyst">
                <div class="form-group">
                    <select class="form-control form-control-sm">
                        <option>C/C++</option>
                    </select>
                    <label for="chosefile">Chose file</label>
                    <input type="file" name="file" class="form-control-file" id="chosefile">
                    <textarea name="content" class="form-control ng-pristine ng-valid" rows="10" placeholder="Paste your source code here..."></textarea>
                    <input type="submit" value="Go">
                </div>
            </form>

        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    Result
                </h4>
            </div>

            <table class="table table-hover">
                <tr>
                    <th> operators </th>
                    <th> occurrences </th>
                    <th> operands </th>
                    <th> occurrences </th>

                </tr>

                @if (Model != null)
                {
                    n=(Model.map1.Count > Model.map2.Count) ? Model.map1.Count : Model.map2.Count;
                    for (int i = 0; i < n; i++)
                    {
                        <tr>
                            @if (i >= Model.map1.Count)
                            {
                                <td align=left>-</td>
                                <td align=center>-</td>
                            }
                            else
                            {
                                <td align=left>@Model.map1.ElementAt(i).Key</td>
                                <td align=center>@Model.map1.ElementAt(i).Value</td>
                            }

                            @if (i >= Model.map2.Count)
                            {
                                <td align=left>-</td>
                                <td align=center>-</td>
                            }
                            else
                            {
                                <td align=left>@Model.map2.ElementAt(i).Key</td>
                                <td align=center>@Model.map2.ElementAt(i).Value</td>
                            }

                        </tr>
                    }

                }


                <tr>
                    @if (Model != null)
                    {
                        <td align=left>n1=@Model.n1</td>
                        <td align=left>N1=@Model.N1</td>
                        <td align=left>n2=@Model.n2</td>
                        <td align=left>N2=@Model.N2</td>
                    }

                </tr>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>
